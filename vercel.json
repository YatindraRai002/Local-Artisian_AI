{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/search.js": {
      "maxDuration": 10
    },
    "api/chat.js": {
      "maxDuration": 10
    },
    "api/stats.js": {
      "maxDuration": 10
    },
    "api/similar.js": {
      "maxDuration": 10
    },
    "api/categories.js": {
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}